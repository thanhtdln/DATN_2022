@model IEnumerable<DATN_2022.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Danh mục
        </th>
        <th>
            Nhà cung cấp
        </th>
        <th>
            Ngày tạo
        </th>
        <th>
            Ngày cập nhật lần cuối
        </th>
        <th>
            Giá gốc
        </th>
        <th>
            Giá bán
        </th>
        <th>
            Số lượng còn
        </th>
        <th>
            Ảnh đại diện
        </th>
        <th>
            Mô tả
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Producer.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedAt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UpdatedAt)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CostPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SellPrice)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Amount)
    </td>
    <td>
        @{
            string imgPath = "~/wwwroot/images/" + item.Avatar;
        }
        <img src="@Url.Content(imgPath)" width="300" class="img-thumbnail" />
        <br />
        @Html.DisplayFor(modelItem => item.Avatar)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }) |
        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
